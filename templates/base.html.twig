						<a href="{{ path('app_galerie') }}" title="Galerie">Galerie</a>
						<a href="{{ path('app_contact') }}" title="Contact">Contact</a>				
						<a href="{{ path('app_login') }}">Connexion</a>
					</div>

				</div>
			</nav>

		</nav>
	</header>
	{% block body %}{% endblock  %}

